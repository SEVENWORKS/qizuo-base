<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.qizuo.cm.modules.system.dao.MenuDao">
    <!-- 专属字段 -->
    <sql id="exclusiveColumns">
        <include refid="CommonColumns.commonColumns"/>,
        a.NAME as "name",
        a.URL as "url",
        a.PARENT_ID as "parentId",
        a.THEME as "theme"
    </sql>
    <!-- 插入 -->
    <insert id="insert">
        insert into sys_menu
            (
                BASE_ID,
                BASE_CREATE_USER_ID,
                BASE_CREATE_TM,
                BASE_STATUS,
                BASE_REMARKS,
                BASE_CREATE_IP,
                NAME,
                URL,
                PARENT_ID,
                THEME
            )
        values
            (
                #{baseId},
                #{baseCreateUserId},
                now(),
                #{baseStatus},
                #{baseRemarks},
                #{baseCreateIp},
                #{name},
                #{url},
                #{parentId},
                #{theme}
            )
    </insert>
    <!-- 修改 -->
    <update id="update">
        update sys_menu set
            BASE_UPDATE_USER_ID=#{baseUpdateUserId},
            BASE_UPDATE_TM=now(),
            BASE_REMARKS=#{baseRemarks},
            BASE_UPDATE_IP=#{baseUpdateIp},
            NAME=#{name},
            URL=#{url},
            THEME=#{theme}
        where BASE_ID=#{baseId}
    </update>
    <!-- 删除 -->
    <delete id="delete">
        delete from sys_menu where BASE_ID=#{baseId}
    </delete>
    <!-- 查找单个 -->
    <select id="query" resultType="org.qizuo.cm.modules.system.pojo.MenuPoJo">
        select
            <include refid="exclusiveColumns"/>
        from sys_menu a
        <where>
            a.BASE_ID=#{baseId}
            and a.BASE_STATUS=0
        </where>
        limit 1
    </select>
    <!-- 查找列表 -->
    <select id="qList" resultType="org.qizuo.cm.modules.system.pojo.MenuPoJo">
        select
            <include refid="exclusiveColumns"/>
        from sys_menu a
        <where>
            and a.BASE_STATUS=0
        </where>
        <if test="orderBy != null and orderBy != ''">
            order by ${orderBy}
        </if>
    </select>
    <!-- 查找分页 -->
    <select id="qPageQZ" resultType="org.qizuo.cm.modules.system.pojo.MenuPoJo">
        select
            <include refid="exclusiveColumns"/>
        from sys_menu a
        <where>
            and a.BASE_STATUS=0
            <if test="entity != null">
                <if test="entity.baseId != null and entity.baseId != ''">
                    and (a.parent_id=#{entity.baseId} or a.base_id=#{entity.baseId})
                </if>
            </if>
        </where>
        <if test="entity.orderBy != null and entity.orderBy != ''">
            order by ${entity.orderBy}
        </if>
    </select>
    <!-- ********************************************************************************************************************** -->
    <!-- 更新状态 -->
    <update id="uStatus">
        update sys_menu set BASE_STATUS=#{baseStatus} where BASE_ID=#{baseId}
    </update>
    <!-- 递归查询菜单列表 -->
    <resultMap id="qEachListMap" type="org.qizuo.cm.modules.system.pojo.MenuPoJo">
        <collection property="menuPoJos" column="baseId" select="qEachList"></collection>
    </resultMap>
    <select id="qEachList" resultMap="qEachListMap">
        select
          <include refid="exclusiveColumns"/>
        from sys_menu a
        <where>
                and a.BASE_STATUS=0
                and a.parent_id=#{baseId}
        </where>
    </select>
</mapper>