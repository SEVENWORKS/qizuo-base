<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.qizuo.cm.modules.system.dao.UserDao">
    <!-- 修改org.qizuo.cm.modules.system.dao.UserDao和sys_user和org.qizuo.cm.modules.system.pojo.UserPoJo -->
    <!-- 专属字段 -->
    <sql id="exclusiveColumns">
        <include refid="CommonColumns.commonColumns"/>,
    </sql>
    <!-- 插入(非自增主键请将useGeneratedKeys及后面拿掉) -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="baseId">
        insert into sys_user
            (
                BASE_ID,
                BASE_CREATE_USER_ID,
                BASE_CREATE_TM,
                BASE_STATUS,
                BASE_REMARKS,
                BASE_CREATE_IP,
            )
        values
            (
                #{baseId},
                #{baseCreateUserId},
                now(),
                #{baseStatus},
                #{baseRemarks},
                #{baseCreateIp},
            )
    </insert>
    <!-- 修改 -->
    <update id="update">
        update sys_user set
            BASE_UPDATE_USER_ID=#{baseUpdateUserId},
            BASE_UPDATE_TM=now(),
            BASE_REMARKS=#{baseRemarks},
            BASE_UPDATE_IP=#{baseUpdateIp},
        where BASE_ID=#{baseId}
    </update>
    <!-- 删除 -->
    <delete id="delete">
        delete from sys_user where BASE_ID=#{baseId}
    </delete>
    <!-- 查找单个 -->
    <select id="query" resultType="org.qizuo.cm.modules.system.pojo.UserPoJo">
        select
            <include refid="exclusiveColumns"/>
        from sys_user a
        <where>
            a.BASE_ID=#{baseId}
            and a.BASE_STATUS=0
        </where>
        limit 1
    </select>
    <!-- 查找列表 -->
    <select id="qList" resultType="org.qizuo.cm.modules.system.pojo.UserPoJo">
        select
            <include refid="exclusiveColumns"/>
        from sys_user a
        <where>
            and a.BASE_STATUS=0
        </where>
        <if test="orderBy != null and orderBy != ''">
            order by ${orderBy}
        </if>
    </select>
    <!-- 查找分页 -->
    <select id="qPageFL" resultType="org.qizuo.cm.modules.system.pojo.UserPoJo">
        select
            <include refid="exclusiveColumns"/>
        from sys_user a
        <where>
            and a.BASE_STATUS=0
            <if test="entity != null">

            </if>
        </where>
        <if test="entity.orderBy != null and entity.orderBy != ''">
            order by ${entity.orderBy}
        </if>
    </select>
    <!-- ********************************************************************************************************************** -->
    <!-- 更新状态 -->
    <update id="uStatus">
        update sys_user set BASE_STATUS=#{baseStatus} where BASE_ID=#{baseId}
    </update>

</mapper>